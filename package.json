{
  "name": "sb-api",
  "version": "0.4.0",
  "description": "JS client library for Suredbits APIs",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "repository": "git@github.com:Suredbits/sb-api.git",
  "author": "Torkel Rogstad <torkel@suredbits.com>",
  "license": "MIT",
  "homepage": "https://suredbits.com/api",
  "keywords": [
    "lightning",
    "bitcoin",
    "btc",
    "microdata",
    "micropayments"
  ],
  "files": [
    "lib/**/*"
  ],
  "scripts": {
    "dev": "env DEBUG='sb-api:lightning:*,sb-api:rest:*,sb-api:rest' npx ts-node -T index.ts",
    "build": "tsc",
    "clean": "rimraf lib",
    "format": "prettier --write \"src/**/*.ts\" \"src/**/*.js\"",
    "lint": "tslint -p tsconfig.json",
    "test": "jest test/rest test/socket",
    "prepublishOnly": "npm-run-all lint clean build",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "devDependencies": {
    "@types/crypto-js": "^3.1.43",
    "@types/debug": "^4.1.0",
    "@types/jest": "^24.0.1",
    "@types/request-promise-native": "^1.0.15",
    "@types/uuid": "^3.4.4",
    "@types/ws": "^6.0.1",
    "jest": "^23.0.0",
    "lodash": "^4.17.15",
    "npm-run-all": "^4.1.5",
    "prettier": "^1.16.4",
    "rimraf": "^2.6.3",
    "ts-jest": "^23.10.5",
    "ts-node": "^8.3.0",
    "tslint": "^5.12.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "3.3.3"
  },
  "dependencies": {
    "assert": "^1.4.1",
    "assert-never": "^1.1.0",
    "bolt11": "^1.2.6",
    "crypto-js": "^3.1.9-1",
    "debug": "^4.1.1",
    "io-ts": "1.8.1",
    "io-ts-types": "0.4.2",
    "lightning-client": "^0.5.2-beta.8",
    "lnd-async": "1.8.0",
    "request": "^2.88.0",
    "request-promise-native": "^1.0.5",
    "uuid": "^3.3.2",
    "ws": "^6.1.3"
  }
}
